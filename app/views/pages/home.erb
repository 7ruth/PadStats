<% title("Home Page") %>

<div id="search_options">

<div id="map-container">
	<div id="map-canvas"></div>

  <div id="geocoding_fields">
    <%= text_field_tag :location, params[:address], placeholder: "Enter a place", :id => 'search_box_geocoding', class: 'search_box' %>
    <%= button_tag "Search", id: "submit_button_geocoding", data: { disable_with: "Please wait..." }, class: "submit_button" %>
  </div>
</div>


<%= "User ID is :#{@user.id}" %>

<%= form_for([@user, @user.locations.build]) do |f| %>

  <p>
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
